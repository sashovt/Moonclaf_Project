@model PhotoGallery.Models.Photo


<html>
<head>
    <title>Details</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/main.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href="~/Content/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/HelperStyle.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        .centerImage {
            text-align: center;
            display: block;
        }
    </style>

</head>
<body class="backgroundColor">
    <div class="backgroundColor" style="padding:10px">
        <div>
            @if (ViewBag.backIndex == 1)
            {
                @Html.ActionLink("<< back", "Gallery", "Photos", null, new { @class = "btn", @style = "margin-bottom:10px; background-color:#a9b4ce" })
            }
            else if (ViewBag.backIndex==2)
            {
                @Html.ActionLink("<< back","MyGallery", "Photos", null, new { @class="btn", @style= "margin-bottom:10px; background-color:#a9b4ce" })
            }
            else if (ViewBag.backIndex == 3)
            {
                @Html.ActionLink("<< back", "CategoryGallery", "Photos", new { @id=Model.CategoryId }, new { @class = "btn", @style = "margin-bottom:10px; background-color:#a9b4ce" })
            }
            else if (ViewBag.backIndex == 4)
            {
                @Html.ActionLink("<< back", "ResultGallery", "Photos", new { @id=Model.AuthorId }, new { @class = "btn", @style = "margin-bottom:10px; background-color:#a9b4ce" })
            }
            else if (ViewBag.backIndex == 5)
            {
                @Html.ActionLink("<< back", "Index", "Home", null, new { @class = "btn", @style = "margin-bottom:10px; background-color:#a9b4ce" })
            }
        </div>
        
        @if (Model.Image != null)
            {
                var base64 = Convert.ToBase64String(Model.Image);
                var imgsrc = string.Format("data:file/gif;base64,{0}", base64);
            <div class="centerImage">
                <a><img style="height:auto; width:auto;" src="@imgsrc" alt="" /></a>
            </div>
        }
        else
        {
            <img src="http://wonkville.net/wp-content/uploads/2016/04/No-image-available.jpg" style="width: 150px; height:100px" />
        }
    </div>
    <!-- Footer -->
    <footer id="footer">
        <a href="#" class="info fa fa-info-circle"><span>About</span></a>
        <div class="inner">
            <div class="content">
                <h3>@Model.Title</h3>
                <p>
                    Uploaded on: @Model.DateAdded.DayOfWeek.ToString()  @Model.DateAdded.Date.ToString("dd-MM-yyy") <br />
                    By: @Model.Author.FullName  <br />
                    In category: @Model.Category.Name
                </p>
            </div>
            <div class="copyright">
                <h3>Follow us</h3>
                <ul class="icons">
                    <li><a href="https://twitter.com/" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                    <li><a href="https://www.facebook.com/" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                    <li><a href="https://www.instagram.com/" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                    <li><a href="https://dribbble.com/" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                </ul>
                &copy; Untitled. Design: <a href="https://templated.co">TEMPLATED</a>. Images: <a href="https://unsplash.com/">Unsplash</a>.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>


