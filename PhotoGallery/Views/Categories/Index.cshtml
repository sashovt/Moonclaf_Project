@model IEnumerable<PhotoGallery.Models.Category>

<html>
<head>
    <title>Categories</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Ultra" rel="stylesheet">
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/hover_pack.js"></script>

    <link href="~/Content/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

 

</head>
<body style="background-color: #d5d5d5;">

  
    <div class="container">
        <div class="well">
            <h2>  Categories @Html.ActionLink("Create", "Create", "Categories", null, new { @class = "btn btn-warning", @style = "margin-right: 10px;" })</h2>
            <div class="row">
                <table class="table table-striped table-hover col-sm-12">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@Html.ActionLink("Edit", "Edit", "Categories", new { @id = category.Id }, null)</td>
                                <td>@Html.ActionLink("Delete", "Delete", "Categories", new { @id = category.Id }, null)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
