@model List<PhotoGallery.Models.Category>

<!DOCTYPE HTML>

<html>
<head>
    <title>Admin: Categories</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/main.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href="~/Content/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/HelperStyle.css" rel="stylesheet" type="text/css" />


</head>
<body class="backgroundColor">


    <!-- Main -->
    <div class="container">
        <div class="well">
            <h2 class="title">Categories</h2>
            @Html.ActionLink("Create", "Create", "Categories", null, new { @class = "btn btn-warning", @style = "margin-right: 10px;" })

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Edit / Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Categories", new { @id = category.Id }, new { @class = "btn btn-group-sm" })
                                @Html.ActionLink("Delete", "Delete", "Categories", new { @id = category.Id }, new { @style = "margin-left:7px", @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>
</html>