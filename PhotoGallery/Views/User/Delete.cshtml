@model PhotoGallery.Models.ApplicationUser

<html>
<head>
    <style type="text/css">
        #createBox {
            margin-left: 30%;
            margin-right: 50%;
            width: 700px;
        }
    </style>

    <title>User: Delete</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/jquery.min.js"></script>
    <link href="~/Content/HelperStyle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
</head>

<body style="background-color:#d5d5d5">
    <div class="main" style="background-color:#d5d5d5">
        <div class="register_account">
            <div class="wrap">
                <h4 class="title">Delete User</h4>
                <hr />
                <h4>Are you sure you want to delete this?</h4>

                @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { EncType = "multipart/form-data", id = "createBox" }))
                {

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10" style="margin-left: 150px; margin-top: -20px;">
                                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group" style="margin-top:30px">
                            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10" style="margin-left: 150px; margin-top: -20px;">
                                @Html.DisplayFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group" style="margin-top:30px;">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Cancel", "List", "User", null, new { @class = "btn btn-group-sm" })
                                <input type="submit" value="Delete" class="btn btn-danger" style="margin-left:20px;" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>